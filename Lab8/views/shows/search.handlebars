
    <h1>Show Finder</h1>
    <main>
    <p>Welcome to the Show Finder page. You can search your favorite show by typing into the searh bar.</p>
    <form action="/search" method = "POST" class="form-class">
    <label for="search-bar">
      Search Bar
    </label>
    <input type="text" id="search-bar" name="searchTerm" placeholder="keyword"/>
    <button type="submit">Search</button>
    </form>
    {{#if hasErrors}}
    <p class="{{className}}">{{message}}</p>
    {{/if}}
    </main>
