<main>
    <div class="show-div">
        <h1>{{title}}</h1>
         {{#if shows.image.medium}}
         <img class = "imgbox" src ="{{shows.image.medium}}" alt="{{title}}"/>
         {{else}}
         <img class = "imgbox" src="nothing" alt="{{title}}"/>
         {{/if}}
         <dl>
            <dt>Languague</dt>
            <dd>{{shows.language}}</dd>
            <dt>Genres</dt>
            <dd>
                 <ul>
                 {{#each shows.genres}}
                 <li>{{this}}</li>
                 {{/each}}
                 </ul>
            </dd>
            <dt>Average Rating</dt>
            <dd>{{shows.rating.average}}</dd>
            <dt>Network</dt>
            <dd>{{shows.network.name}}</dd>
            <dt>Summary</dt>
            <dd>{{shows.summary}}</dd>
        </dl>
    </div>
</main>